<%= stylesheet_link_tag "friends" %>
<%= form_with(model: friend) do |form| %>
  <% if friend.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(friend.errors.count, "error") %> prohibited this friend from being saved:</h2>

      <ul>
        <% friend.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <!-- <%= form.label :first_name %> -->
    <%= form.text_field :first_name , class:"form-control",placeholder:"First Name"%>
  </div>

  <div class="field form-group">
    <!-- <%= form.label :last_name %> -->
    <%= form.text_field :last_name, class:"form-control", placeholder:"Last Name" %>
  </div>

  <div class="field form-group">
    <!-- <%= form.label :email %> -->
    <%= form.text_field :email, class:"form-control",placeholder:"Email" %>
  </div>

  <div class="field form-group">
    <!-- <%= form.label :phone %> -->
    <%= form.text_field :phone , class:"form-control",placeholder:"Phone"%>
  </div>

  <div class="field form-group">
    <!-- <%= form.label :address %> -->
    <%= form.text_field :address , class:"form-control",placeholder:"Address"%>
  </div>
  <div class="field form-group">
    <!-- <%= form.label :address %> -->
    <%= form.number_field :user_id , class:"form-control", value: current_user.id, id: :friend_user_id, type: :hidden %>
  </div>
  <!-- <%= current_user.id %>   lay id nguoi dung dang nhap hien tai -->

  <div class="actions">
    <%= form.submit  class:'btn btn-secondary'%>
  </div>

<% end %>

